<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Fotag Mobile (ka7patel)"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">

            <ImageButton
                    android:id="@+id/download_button"
                    android:src="@drawable/download_icon"
                    android:background="@color/colorPrimary"
                    android:layout_width="36dp"
                    android:layout_height="43dp"
                    android:layout_marginRight="10dp"
                    android:onClick="downloadClicked"/>

            <ImageButton
                    android:id="@+id/cancel_button"
                    android:src="@drawable/cancel_icon"
                    android:background="@color/colorPrimary"
                    android:layout_width="36dp"
                    android:layout_height="43dp"
                    android:onClick="clearClicked"/>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_height="wrap_content">

                <ImageButton
                        android:id="@+id/star_button_1"
                        android:src="@drawable/star_empty_icon"
                        android:background="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="starClick"/>
                <ImageButton
                        android:id="@+id/star_button_2"
                        android:src="@drawable/star_empty_icon"
                        android:background="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="starClick"/>
                <ImageButton
                        android:id="@+id/star_button_3"
                        android:src="@drawable/star_empty_icon"
                        android:background="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="starClick"/>
                <ImageButton
                        android:id="@+id/star_button_4"
                        android:src="@drawable/star_empty_icon"
                        android:background="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="starClick"/>
                <ImageButton
                        android:id="@+id/star_button_5"
                        android:src="@drawable/star_empty_icon"
                        android:background="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="starClick"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.Toolbar>